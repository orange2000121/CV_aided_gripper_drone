    <TextView
        android:id="@+id/textView4"
        android:textStyle="bold|italic"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
